#

mainmenu "AliOS Things Configuration"

# Hidden config symbols
config AOS_BUILD
    bool
    default y
    help
      This option indicates AOS build env is running.

config AOS_BUILD_BOARD
    string
    help
      This option holds the name of the board that is going to build.

config AOS_BUILD_APP
    string
    help
      This option holds the name of the application that is going to build.

menu "Application Configuration"
choice
    prompt "Select App"
    default AOS_APP_NULL

config AOS_APP_NULL
    bool "Null"

if AOS_APP_NULL
    config AOS_APP_COMP_MAKE_ONLY
        bool "compile component"
        default n
if AOS_APP_COMP_MAKE_ONLY
    config AOS_BUILD_APP
        default "comp_make_only"

    config AOS_BUILD_ARCH
        string "arch"
        default "arch_comp_make"

    config AOS_BUILD_COMPNAME
        string "compname"
        default "compname_comp_make"

endif
endif
source "projects/Config.in"
endchoice
endmenu

source "vendor/Config.in"

menu "Kernel      Configuration"
source "kernel/Config.in"
source "kernel/core/osal/aos/Config.in"
source "kernel/core/osal/posix/Config.in"
source "kernel/core/osal/cmsis/Config.in"
endmenu


menu "Middleware  Configuration"
source "./components/Config.in"
endmenu

source "kernel/core/mk/uspace_lib/Config.in"
