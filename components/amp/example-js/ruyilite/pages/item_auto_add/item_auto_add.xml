<?xml version="1.0" encoding="utf-8"?>

<page>
  <image id="image" src="background1"> </image>
  <container id="topBar" layout="off" fit="none" >
	  <text id="shop" class="textClass" value="滨江水果店"  > </text>
	  <icon id="signal" class="iconClass"  symbol="wifi">  </icon>
	  <text id="time" class="textClass"  > 13:26 </text>
	  <text id="batteryValue" class="textClass" > 100% </text>
	  <icon id="battery" class="iconClass"  symbol="battery_4">  </icon>
  </container>
  <container id="auto_add_item" layout="off" fit="none" > 
    <text id="auto_add_text1" class="itemAddText"  value="上一件" >  </text>
    <text id="auto_add_text2" class="itemAddText"  value="{{LastName}}" >  </text>
    <text id="auto_add_text3" class="itemAddText"  value="{{LastPrice}}" >  </text>
    <container id="auto_add_item1" layout="off" fit="none" > 
      <text id="auto_add_text4" class="itemAddText" value="{{ActiveName}}" >  </text>
      <text id="auto_add_text5" class="itemAddText"  value="{{ActivePrice}}" >  </text>
    </container>
  </container>
  <line id="auto_add_line" start-x="220"  start-y="210" end-x="220"  end-y="225"> </line>
  <text id="auto_add_text6" class="itemAddText"  value="总计" >  </text>
  <text id="auto_add_text7" class="itemAddText"  value="{{TotalNum}}" >  </text>
  <text id="auto_add_text8" class="itemAddText"  value="{{TotalPrice}}" >  </text>
</page>

