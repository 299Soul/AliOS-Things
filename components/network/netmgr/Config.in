config AOS_COMP_NETMGR
    bool "Network Manager"
    default n
    select AOS_COMP_OSAL_AOS
    #select AOS_COMP_KV
    select RHINO_CONFIG_UCALLBACK
    select AOS_COMP_USERVICE
    select AOS_COMP_HAL2VFS
    select AOS_COMP_WIFIDEV
    select AOS_COMP_SNTP
    help
      AliOS things NETMGR -- smart config support component

if AOS_COMP_NETMGR
# Configurations for comp netmgr

# Introduction
#   AOS_COMP_NETMGR_KSPACE_RUNABLE - netmgr will runalbe in kspace
#   AOS_COMP_NETMGR_USPACE_RUNABLE - netmgr will runalbe in uspace
#   netmgr is able to config in both kspace and uspace at same time

config AOS_COMP_NETMGR_KSPACE_RUNABLE
    bool "netmgr run in kernel space"
    default n
    select AOS_MCU_V_WIFI_DRV
    help
    support netmgr config in kspace report.

config AOS_COMP_NETMGR_USPACE_RUNABLE
    bool "config netmgr run in user space"
    default n
    select AOS_MCU_V_WIFI_DRV
    help
    support netmgr config in uspace report.

config AOS_ACTIVATION_REPORT
    bool "activation report support"
    default y
    select AOS_COMP_ACTIVATION
    help
    support activation report.

config CONFIG_CLASSIC_NETMGR
    bool
    default n

config CONFIG_MODERN_NETMGR
    bool
    default n

config AOS_OPTIMIZE_NETWORK
    bool "optimize network support"
    default y if CONFIG_MODERN_NETMGR
    default n if CONFIG_CLASSIC_NETMGR
    help
    support optimize network.

choice
    prompt "Config Network Version:"
    default AOS_NETMGR_WITH_CLASSIC if CONFIG_CLASSIC_NETMGR
    default AOS_NETMGR_WITH_MODERN if CONFIG_MODERN_NETMGR
    default AOS_NETMGR_WITH_MODERN
    help
      Choose classic netmgr or modern netmgr

    config AOS_NETMGR_WITH_MODERN
        bool "Modern netmgr"
        help
        support Modern netmgr.

    config AOS_NETMGR_WITH_CLASSIC
        bool "Classic netmgr"
        help
        support classic netmgr.
endchoice

choice
    prompt "Config Network:"
    default AOS_NET_WITH_WIFI
    help
      Choose right Network

    config AOS_NET_WITH_CELLULAR
        bool "Cellular"
        help
        support net with Cellular.

    config AOS_NET_WITH_WIFI
        bool "Wi-Fi"
        help
        support net with Wi-Fi.

    config AOS_NET_WITH_ETH
        bool "ETH"
        help
        support net with ETH.

    config AOS_NET_WITH_BLANK
        bool "Blank"
        help
        support net with BLANK.
endchoice

endif
