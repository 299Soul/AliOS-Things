config AOS_BOARD_HAAS100_MK
    bool "haas100-mk"
    select AOS_MCU_HAAS1000 if AOS_KERNEL_MODE
    select AOS_COMP_KERNEL_INIT if AOS_KERNEL_MODE
    select RHINO_CONFIG_URES
    select RHINO_CONFIG_UCLI
    select RHINO_CONFIG_UFS if AOS_KERNEL_MODE
    select RHINO_CONFIG_UTCPIP if AOS_KERNEL_MODE
    select RHINO_CONFIG_UCALLBACK
    select RHINO_CONFIG_UIPC if AOS_KERNEL_MODE
    select AOS_COMP_IRQ
    select RHINO_CONFIG_VFS_SYSCALL
    select RHINO_CONFIG_USER_SPACE
    help
        **haas100** is hardware board base on [AliOS-Things](https://github.com/alibaba/AliOS-Things), with a variety of peripherals. The chip's mcu is HAAS1000. The HAAS1000 is a AIoT chip specifically designed for smart home & audio application, such as smart speakers.

if AOS_BOARD_HAAS100_MK
# Configurations for board haas100
config LITTLE_FS_VER
    string  "little fs image version"
    default "fs_v1.0.0"

config CONFIG_WORK_WITH_WIFI
    bool
    select CONFIG_AOS_TCPIP if CONFIG_WORK_WITH_WIFI

config CONFIG_WORK_WITH_ETH
    bool
    select AOS_COMP_SAL if CONFIG_WORK_WITH_ETH
    select CONFIG_NO_TCPIP if CONFIG_WORK_WITH_ETH

config CONFIG_WORK_WITH_LTE
    bool
    select AOS_COMP_SAL if CONFIG_WORK_WITH_LTE
    select CONFIG_NO_TCPIP if CONFIG_WORK_WITH_LTE

config CONFIG_IRQ_SYSCALL
    bool
        default y

config CONFIG_IOMAP_SYSCALL	
    bool
    default y	

choice
    prompt "physical network selection"
    help
        Select WiFi or ethernet

    config CONFIG_WORK_WITH_WIFI
        bool "ENABLE Soc WiFi"

    config CONFIG_WORK_WITH_ETH
        bool "ENABLE Ethernet"
    
    config CONFIG_WORK_WITH_LTE
        bool "Enable LTE Module(default EC20)"

endchoice

source "vendor/haas/board/haas100-mk/board_test/Config.in"
source "vendor/haas/board/haas100-mk/config/partition/Config.in"

endif

