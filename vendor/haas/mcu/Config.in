source vendor/haas/mcu/hal/gpio/Config.in
source vendor/haas/mcu/hal/uart/Config.in
source vendor/haas/mcu/hal/spi/Config.in
source vendor/haas/mcu/hal/i2c/Config.in
source vendor/haas/mcu/hal/flash/Config.in
source vendor/haas/mcu/hal/adc/Config.in
source vendor/haas/mcu/hal/sd/Config.in
source vendor/haas/mcu/hal/wifi/Config.in
source vendor/haas/mcu/hal/regs/Config.in
source vendor/haas/mcu/drivers/Config.in
source vendor/haas/mcu/hal/ubase/Config.in
source vendor/haas/mcu/ota/Config.in